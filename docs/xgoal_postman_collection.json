{
  "info": {
    "name": "xGoal Inference Service",
    "description": "Collection of requests for the xGoal logistic regression inference API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Predict Shots",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shots\": [\n    {\n      \"shot_id\": \"shot-1\",\n      \"match_id\": \"match-001\",\n      \"start_x\": 35.2,\n      \"start_y\": 18.4,\n      \"is_set_piece\": false,\n      \"is_corner\": false\n    },\n    {\n      \"shot_id\": \"shot-2\",\n      \"match_id\": \"match-001\",\n      \"start_x\": 12.1,\n      \"start_y\": 8.3,\n      \"is_set_piece\": true,\n      \"is_free_kick\": true\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/predict_shots",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "predict_shots"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Predict Shots With Prompt",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"shots\": [\n    {\n      \"shot_id\": \"shot-1\",\n      \"match_id\": \"match-002\",\n      \"start_x\": 25.0,\n      \"start_y\": 10.0\n    }\n  ],\n  \"model\": {\n    \"intercept\": -1.4,\n    \"coefficients\": {\n      \"start_x\": 0.05,\n      \"start_y\": -0.03\n    }\n  },\n  \"llm_model\": \"mistral:7b-instruct-q4_0\",\n  \"prompt\": \"Provide a tactical summary of the shooting opportunity focusing on pressure and angle, and keep the answer under 120 words.\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/predict_shots_with_prompt",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "predict_shots_with_prompt"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Match Shots",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/match/:match_id/shots",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "match",
            ":match_id",
            "shots"
          ],
          "variable": [
            {
              "key": "match_id",
              "value": "match-001",
              "description": "Identifier of the match to retrieve cached predictions for."
            }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    }
  ]
}
